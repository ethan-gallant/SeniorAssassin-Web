{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/getOAuthURL",
        "function": "getOAuthURL"
      },
      {
        "source": "/api/request-token",
        "function": "oauthCallback"
      },
      {
        "source": "/api/game/current-target",
        "function": "getCurrentTarget"
      },
      {
        "source":  "/api/game/all-targets",
        "function": "getAllTargets"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/dashboard",
        "destination": "/index.html"
      },
      {
        "source": "/dashboard/*",
        "destination": "/index.html"
      },
      {
        "source": "/rules",
        "destination": "/index.html"
      },
      {
        "source": "/error",
        "destination": "/index.html"
      }

    ]
  }
}
